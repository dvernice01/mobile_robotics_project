<?xml version="1.0"?>
<robot name="turtlebot_waffle">
  
  <!-- Base Link (parallelepipedo nero piÃ¹ grande) -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.40 0.35 0.10"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
  </link>

  <!-- Ruota anteriore sinistra (grigia) -->
  <link name="wheel_left_front">
    <visual>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <cylinder length="0.03" radius="0.033"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
  </link>

  <joint name="wheel_left_front_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_front"/>
    <origin xyz="0.12 0.19 -0.03" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Ruota anteriore destra (grigia) -->
  <link name="wheel_right_front">
    <visual>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <cylinder length="0.03" radius="0.033"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
  </link>

  <joint name="wheel_right_front_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_front"/>
    <origin xyz="0.12 -0.19 -0.03" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Ruota posteriore centrale (caster wheel - grigia) -->
  <link name="caster_wheel">
    <visual>
      <geometry>
        <sphere radius="0.015"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
  </link>

  <joint name="caster_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_wheel"/>
    <origin xyz="-0.15 0 -0.065" rpy="0 0 0"/>
  </joint>

  <!-- Sensore ZED (appoggiato sul bordo anteriore della base) -->
  <link name="zed_camera">
    <visual>
      <geometry>
        <box size="0.03 0.175 0.03"/>
      </geometry>
      <material name="dark_gray">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
  </link>

  <joint name="zed_camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="zed_camera"/>
    <origin xyz="0.185 0 0.065" rpy="0 0 0"/>
  </joint>

  <!-- Lente sinistra ZED -->
  <link name="zed_left_lens">
    <visual>
      <geometry>
        <cylinder length="0.005" radius="0.008"/>
      </geometry>
      <material name="blue_lens">
        <color rgba="0.2 0.3 0.8 1"/>
      </material>
    </visual>
  </link>

  <joint name="zed_left_lens_joint" type="fixed">
    <parent link="zed_camera"/>
    <child link="zed_left_lens"/>
    <origin xyz="0.0175 0.06 0" rpy="0 1.57 0"/>
  </joint>

  <!-- Lente destra ZED -->
  <link name="zed_right_lens">
    <visual>
      <geometry>
        <cylinder length="0.005" radius="0.008"/>
      </geometry>
      <material name="blue_lens">
        <color rgba="0.2 0.3 0.8 1"/>
      </material>
    </visual>
  </link>

  <joint name="zed_right_lens_joint" type="fixed">
    <parent link="zed_camera"/>
    <child link="zed_right_lens"/>
    <origin xyz="0.0175 -0.06 0" rpy="0 1.57 0"/>
  </joint>

</robot>